{
  "compilerOptions": {
    "module": "commonjs",
    "esModuleInterop": true,
    "target": "es6",
    "moduleResolution": "node",
    "rootDir": ".",
    "sourceMap": true,
    "outDir": "dist",
    "allowJs": true,
    "lib": [
      "es2020",
      "dom"
    ],
    "strict": true,
    "noFallthroughCasesInSwitch": true,
    "resolveJsonModule": true,
  },
  "include": [
    "src",
    "server.js",
    "config",
  ]
}